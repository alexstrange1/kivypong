#:kivy 2.3.0

<PongBall>:
    size:50,50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    canvas:
        Rectangle:
            size: 10, self.height
            pos: self.center_x, 0
    Label:
        text: "0"
        font_size: 70
        top: root.top
        center_x: root.width /4
    Label:
        text: "0"
        font_size: 70
        top: root.top
        center_x: root.width /4 * 3
    PongBall:
        center: self.parent.center
        id: pong_ball